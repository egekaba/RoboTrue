@model RoboTrue.Core.Entities.SatilanUrunler

@{
    ViewData["Title"] = "Create";
}



<h4>SatilanUrunler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UrunKodu" class="control-label"></label>
                <select asp-for="UrunKodu" class="form-control" asp-items="ViewBag.UrunKoduId"></select>
            </div>
        
             
            <div class="form-group">
                <label asp-for="UrunFiyati" class="control-label"></label>
                <input asp-for="UrunFiyati" class="form-control" />
                <span asp-validation-for="UrunFiyati" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DovizCesidiId" class="control-label"></label>
                <select asp-for="DovizCesidiId" class="form-control" asp-items="ViewBag.DovizCesidiId"></select>
                </div>
            
            <div class="form-group">
                <label asp-for="Kdv" class="control-label"></label>
                <input asp-for="Kdv" class="form-control" />
                <span asp-validation-for="Kdv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SatilanCarilerId" class="control-label"></label>
                <select asp-for="SatilanCarilerId" class="form-control" asp-items="ViewBag.SatilanCarilerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate"  value="@ViewBag.CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OlusturanKullaniciId" class="control-label"></label>
                <select asp-for="OlusturanKullaniciId" class="form-control" asp-items="ViewBag.KullaniciId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

