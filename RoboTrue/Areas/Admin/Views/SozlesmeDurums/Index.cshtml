@model IEnumerable<RoboTrue.Core.Entities.SozlesmeDurum>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SozlesmeDurumu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SozlesmeBaslangıcTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SozlesmeBitis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SozlesmeDurumu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SozlesmeBaslangıcTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SozlesmeBitis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
